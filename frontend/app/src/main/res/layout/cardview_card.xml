<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main2">

        <LinearLayout
            android:id="@+id/cd_card_head"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/main1_v2"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main2"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cd_card_head">

            <TextView
                android:id="@+id/cd_card_quantity_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="1/1"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/ghost_white"></TextView>

            <ImageView
                android:id="@+id/cd_card_image_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/blazing_vortex_booster_pack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/cd_card_code_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="CODE"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/ghost_white"></TextView>

            <TextView
                android:id="@+id/cd_card_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="NAME"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/ghost_white"></TextView>

            <TextView
                android:id="@+id/cd_card_rarity_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="RARITY"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/ghost_white"></TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.cardview.widget.CardView>